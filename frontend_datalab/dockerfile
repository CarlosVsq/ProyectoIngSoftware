# syntax=docker/dockerfile:1

ARG NODE_VERSION=25.0.0

FROM node:${NODE_VERSION}-alpine as base
WORKDIR /usr/src/app

# Etapa de build - necesita TODAS las dependencias (incluyendo devDependencies)
FROM base as build

RUN --mount=type=bind,source=package.json,target=package.json \
    --mount=type=bind,source=package-lock.json,target=package-lock.json \
    --mount=type=cache,target=/root/.npm \
    npm ci

COPY . .

# Hacer el build de Angular
RUN npm run build

# Etapa final - usar nginx para servir los archivos
FROM nginx:alpine as final

# Copiar los archivos compilados desde la etapa de build
# Angular 17+ suele generar: dist/nombre-proyecto/browser
COPY --from=build /usr/src/app/dist/datalab-frontend/browser /usr/share/nginx/html

# ConfiguraciÃ³n de nginx para Angular (manejo de rutas)
RUN echo 'server { \
    listen 80; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]